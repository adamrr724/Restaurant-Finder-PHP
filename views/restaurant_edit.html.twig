<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
     <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
     <link rel="stylesheet" href="/css/styles.css" type="text/css">
     <script>
      $(document).ready(function() {
         $('select').material_select();
     });
   </script>
    <title>Restaurant List</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">Portland Restaurants</a>
        </div>
    </nav>
    <div class="container">
        <div class="cuisineheader">
            <h1>Update {{ restaurant.getRestName }} Information</h1>
        </div>

        <form action="/restaurants/{{ restaurant.getId }}/rest_name" method="post">

          <input name="_method" type="hidden" value="patch">

          <div class="input-field">
              <label for="rest_name">Rename your restaurant:</label>
              <input id="rest_name" name="rest_name" type="text" required>
          </div>

          <button class="btn waves-effect blue darken-1 waves-light" type="submit">Update</button>
        </form>


        <form action="/restaurants/{{ restaurant.getId }}/location" method="post">
          <input name="_method" type="hidden" value="patch">
          <div class="input-field">
              <label for="location">New Location:</label>
              <input id="location" name="location" type="text" required>
          </div>

          <button class="btn waves-effect blue darken-1 waves-light" type="submit">Update</button>
        </form>

        <form action="/restaurants/{{ restaurant.getId }}/price_range" method="post">
          <input name="_method" type="hidden" value="patch">

          <div class="input-field">
              <select name="price_range">
                  <option value="" disabled selected>Price Range</option>
                  <option value="Cheap">Cheap</option>
                  <option value="Average">Average</option>
                  <option value="Expensive">Expensive</option>
                  <label for="price_range"></label>
              </select>
          </div>

          <button class="btn waves-effect blue darken-1 waves-light" type="submit">Update</button>
        </form>
        <form action="/restaurants/{{ restaurant.getId }}/delete" method="post">
            <input name="_method" type="hidden" value="delete">
            <button class="btn waves-effect blue darken-1 waves-light" type="submit" name="button">Delete restaurant</button>
        </form>
        <p><a href='/'>Home</a></p>
</div>
</body>
</html>
